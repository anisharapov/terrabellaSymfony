{% extends 'base.html.twig' %}

{% block title %}Guesthouse Terrabella - Categories{% endblock %}

{% block body %}
    <main>
        <section class="section">
            <h2>{% trans %}Manage Categories{% endtrans %}</h2>
            <article>
                <p>{% trans %}Use this form to add or edit a category.{% endtrans %}</p>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.categoryName, {
                        label: 'Category Name'|trans,
                        attr: { class: 'form-control' }
                    }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.managerCategories, {
                        label: 'Manager'|trans,
                        attr: { class: 'form-control' }
                    }) }}
                </div>
                <div class="form-actions">
                    <button type="submit" class="button">{% trans %}Save{% endtrans %}</button>
                    <a href="{{ path('app_home') }}" class="button home-link">{% trans %}Return to main page{% endtrans %}</a>
                </div>
                {{ form_end(form) }}
            </article>
        </section>
    </main>
{% endblock %}