{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/reset_password.css') }}">
{% endblock %}

{% block body %}
<div class="reset-container">
    <h1 class="reset-title">Réinitialisation du mot de passe</h1>
    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    
    {{ form_start(form, {'attr': {'class': 'reset-form'}}) }}
        <div class="form-group">
            {{ form_label(form.password, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.password, {
                'attr': {
                    'class': 'form-input',
                    'placeholder': 'Entrez votre nouveau mot de passe',
                    'autocomplete': 'new-password'
                }
            }) }}
            {{ form_errors(form.password) }}
        </div>        
        <button type="submit" class="submit-btn">Valider</button>
    {{ form_end(form) }}
</div>
{% endblock %}